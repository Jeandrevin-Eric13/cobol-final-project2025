{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build COBOL",
      "type": "shell",
      "command": "cobc",
      "args": [
        "-x",       // Generate executable
        "-I", 
        "${workspaceFolder}/includes",
        "-I",
        "../includes",
        "-g",       // Debug symbols (optional)
        "-fmf",
        "-o",       // Output file flag
        "${fileBasenameNoExtension}.exe",  // Output filename
        "${file}",
        "../subprogramas/buscar-cliente.cbl",
        "calculate-cbf.cbl",
        "crear-cbf.cbl",
        "guardar-cliente.cbl"
   // Input COBOL file
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
